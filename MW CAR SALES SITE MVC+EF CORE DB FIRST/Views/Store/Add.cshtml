<form asp-action="Add" asp-controller="Store" method="post" class="w-25 m-auto">
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label"></label>
        <textarea type="text" class="form-control" asp-for="@Model.Description"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Price" class="form-label"></label>
        <input type="number" class="form-control" asp-for="@Model.Price">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Image" class="form-label"></label>
        <input type="url" class="form-control" asp-for="@Model.Image">
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>
